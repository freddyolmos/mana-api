generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  CASHIER
  KITCHEN
}

enum OrderType {
  DINE_IN
  TAKEOUT
  DELIVERY
}

enum OrderStatus {
  OPEN
  SENT_TO_KITCHEN
  READY
  CLOSED
  CANCELED
}

enum OrderItemStatus {
  PENDING
  IN_PROGRESS
  READY
  CANCELED
}

enum TicketStatus {
  OPEN
  PAID
  CANCELED
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum TableStatus {
  FREE
  OCCUPIED
}

enum OrderEventType {
  ORDER_SENT_TO_KITCHEN
  ITEM_STATUS_CHANGED
  ORDER_READY
  TICKET_CREATED
  PAYMENT_ADDED
  TICKET_CLOSED
  TABLE_ATTACHED
  TABLE_RELEASED
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  isActive Boolean @default(true)

  role UserRole @default(ADMIN)

  refreshTokenHash String?
  refreshTokenExp  DateTime?

  orders             Order[]
  createdTickets     Ticket[]     @relation("TicketCreatedBy")
  createdPayments    Payment[]    @relation("PaymentCreatedBy")
  createdOrderEvents OrderEvent[] @relation("OrderEventCreatedBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- CATALOG MODEL ---

model Category {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  sortOrder Int     @default(0)
  isActive  Boolean @default(true)

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  price       Decimal @db.Decimal(10, 2)
  isActive    Boolean @default(true)

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  modifierGroups ProductModifierGroup[]

  ordersItem OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([categoryId, name])
  @@index([categoryId])
  @@map("products")
}

model ModifierGroup {
  id   Int    @id @default(autoincrement())
  name String @unique

  required  Boolean @default(false)
  minSelect Int     @default(0)
  maxSelect Int     @default(1)
  multi     Boolean @default(false)

  isActive Boolean @default(true)

  options  ModifierOption[]
  products ProductModifierGroup[]

  modifiers OrderItemModifier[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("modifier_groups")
}

model ModifierOption {
  id         Int     @id @default(autoincrement())
  name       String
  priceDelta Decimal @default(0.00) @db.Decimal(10, 2)
  isActive   Boolean @default(true)

  groupId Int
  group   ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  modifiers OrderItemModifier[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, name])
  @@index([groupId])
  @@map("modifier_options")
}

model ProductModifierGroup {
  id Int @id @default(autoincrement())

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  groupId Int
  group   ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  sortOrder Int @default(0)

  @@unique([productId, groupId])
  @@index([groupId])
  @@map("product_modifier_groups")
}

// --- ORDER MODEL ---

model Order {
  id     Int         @id @default(autoincrement())
  type   OrderType
  status OrderStatus @default(OPEN)

  notes String?

  subtotal Decimal @default(0.00) @db.Decimal(10, 2)
  total    Decimal @default(0.00) @db.Decimal(10, 2)

  createdById Int?
  createdBy   User? @relation(fields: [createdById], references: [id], onDelete: SetNull)

  tableId Int?
  table   Table? @relation(fields: [tableId], references: [id], onDelete: SetNull)

  items  OrderItem[]
  ticket Ticket?
  events OrderEvent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([type])
  @@index([tableId])
  @@map("orders")
}

model OrderItem {
  id Int @id @default(autoincrement())

  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  qty    Int
  status OrderItemStatus @default(PENDING)
  notes  String?

  // snapshot
  unitPrice      Decimal @db.Decimal(10, 2)
  modifiersTotal Decimal @default(0.00) @db.Decimal(10, 2)
  lineTotal      Decimal @default(0.00) @db.Decimal(10, 2)

  modifiers OrderItemModifier[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model OrderItemModifier {
  id Int @id @default(autoincrement())

  orderItemId Int
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  groupId Int
  group   ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Restrict)

  optionId Int
  option   ModifierOption @relation(fields: [optionId], references: [id], onDelete: Restrict)

  priceDeltaSnapshot Decimal @db.Decimal(10, 2)

  @@unique([orderItemId, optionId])
  @@index([orderItemId])
  @@index([groupId])
  @@index([optionId])
  @@map("order_item_modifiers")
}

model Table {
  id     Int         @id @default(autoincrement())
  name   String      @unique
  status TableStatus @default(FREE)

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@map("tables")
}

model Ticket {
  id Int @id @default(autoincrement())

  orderId Int   @unique
  order   Order @relation(fields: [orderId], references: [id], onDelete: Restrict)

  createdById Int?
  createdBy   User? @relation("TicketCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  status TicketStatus @default(OPEN)

  subtotal Decimal @db.Decimal(10, 2)
  total    Decimal @db.Decimal(10, 2)

  items    TicketItem[]
  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdById])
  @@map("tickets")
}

model TicketItem {
  id Int @id @default(autoincrement())

  ticketId Int
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  productId           Int?
  productNameSnapshot String

  qty                    Int
  unitPriceSnapshot      Decimal @db.Decimal(10, 2)
  modifiersSnapshot      Json?
  modifiersTotalSnapshot Decimal @default(0.00) @db.Decimal(10, 2)
  lineTotalSnapshot      Decimal @db.Decimal(10, 2)

  createdAt DateTime @default(now())

  @@index([ticketId])
  @@index([productId])
  @@map("ticket_items")
}

model Payment {
  id Int @id @default(autoincrement())

  ticketId Int
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  createdById Int?
  createdBy   User? @relation("PaymentCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  method PaymentMethod
  amount Decimal       @db.Decimal(10, 2)
  change Decimal       @default(0.00) @db.Decimal(10, 2)

  createdAt DateTime @default(now())

  @@index([ticketId])
  @@index([createdById])
  @@map("payments")
}

model OrderEvent {
  id Int @id @default(autoincrement())

  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  type    OrderEventType
  message String?
  payload Json?

  createdById Int?
  createdBy   User? @relation("OrderEventCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([type])
  @@map("order_events")
}
