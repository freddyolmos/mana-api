generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  CASHIER
  KITCHEN
}

enum OrderType {
  DINE_IN
  TAKEOUT
  DELIVERY
}

enum OrderStatus {
  OPEN
  SENT_TO_KITCHEN
  READY
  CLOSED
  CANCELED
}

enum OrderItemStatus {
  PENDING
  IN_PROGRESS
  READY
  CANCELED
}

enum TicketStatus {
  OPEN
  PAID
  CANCELED
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum TableStatus {
  FREE
  OCCUPIED
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  isActive Boolean @default(true)

  role UserRole @default(ADMIN)

  refreshTokenHash String?
  refreshTokenExp  DateTime?

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- CATALOG MODEL ---

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)

  products  Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  price       Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)

  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  modifierGroups ProductModifierGroup[]

  ordersItem OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@unique([categoryId, name])
  @@map("products")
}

model ModifierGroup {
  id        Int     @id @default(autoincrement())
  name      String  @unique

  required  Boolean @default(false)
  minSelect Int     @default(0)
  maxSelect Int     @default(1)
  multi     Boolean @default(false)

  isActive  Boolean @default(true)

  options   ModifierOption[]
  products  ProductModifierGroup[]

  modifiers OrderItemModifier[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("modifier_groups")
}

model ModifierOption {
  id         Int           @id @default(autoincrement())
  name       String
  priceDelta Decimal       @db.Decimal(10, 2) @default(0.00)
  isActive   Boolean       @default(true)

  groupId    Int
  group      ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  modifiers OrderItemModifier[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([groupId])
  @@unique([groupId, name])
  @@map("modifier_options")
}

model ProductModifierGroup {
  id        Int @id @default(autoincrement())

  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  groupId   Int
  group     ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  sortOrder Int @default(0)

  @@unique([productId, groupId])
  @@index([groupId])
  @@map("product_modifier_groups")
}

// --- ORDER MODEL ---

model Order {
  id        Int        @id @default(autoincrement())
  type      OrderType
  status    OrderStatus @default(OPEN)

  notes     String?

  subtotal  Decimal     @db.Decimal(10, 2) @default(0.00)
  total     Decimal     @db.Decimal(10, 2) @default(0.00)

  createdById Int?
  createdBy   User?      @relation(fields: [createdById], references: [id], onDelete: SetNull)

  tableId   Int?
  table     Table?     @relation(fields: [tableId], references: [id], onDelete: SetNull)

  items     OrderItem[]
  ticket    Ticket?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([type])
  @@index([tableId])
  @@map("orders")
}

model OrderItem {
  id        Int            @id @default(autoincrement())

  orderId   Int
  order     Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId Int
  product   Product        @relation(fields: [productId], references: [id], onDelete: Restrict)

  qty       Int
  status    OrderItemStatus @default(PENDING)
  notes     String?

  // snapshot
  unitPrice Decimal        @db.Decimal(10, 2)
  modifiersTotal Decimal   @db.Decimal(10, 2) @default(0.00)
  lineTotal Decimal        @db.Decimal(10, 2) @default(0.00)

  modifiers OrderItemModifier[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model OrderItemModifier {
  id          Int @id @default(autoincrement())

  orderItemId Int
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  groupId     Int
  group       ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Restrict)

  optionId    Int
  option      ModifierOption @relation(fields: [optionId], references: [id], onDelete: Restrict)

  priceDeltaSnapshot Decimal @db.Decimal(10, 2)

  @@index([orderItemId])
  @@index([groupId])
  @@index([optionId])
  @@unique([orderItemId, optionId])
  @@map("order_item_modifiers")
}

model Table {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  status    TableStatus @default(FREE)

  orders    Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@map("tables")
}

model Ticket {
  id        Int         @id @default(autoincrement())

  orderId   Int         @unique
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Restrict)

  status    TicketStatus @default(OPEN)

  subtotal  Decimal     @db.Decimal(10, 2)
  total     Decimal     @db.Decimal(10, 2)

  items     TicketItem[]
  payments  Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@map("tickets")
}

model TicketItem {
  id        Int        @id @default(autoincrement())

  ticketId  Int
  ticket    Ticket     @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  productId Int?
  productNameSnapshot String

  qty       Int
  unitPriceSnapshot  Decimal   @db.Decimal(10, 2)
  modifiersSnapshot  Json?
  modifiersTotalSnapshot Decimal @db.Decimal(10, 2) @default(0.00)
  lineTotalSnapshot  Decimal   @db.Decimal(10, 2)

  createdAt DateTime @default(now())

  @@index([ticketId])
  @@index([productId])
  @@map("ticket_items")
}

model Payment {
  id        Int         @id @default(autoincrement())

  ticketId  Int
  ticket    Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  method    PaymentMethod
  amount    Decimal     @db.Decimal(10, 2)
  change    Decimal     @db.Decimal(10, 2) @default(0.00)

  createdAt DateTime @default(now())

  @@index([ticketId])
  @@map("payments")
}
